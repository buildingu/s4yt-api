{
  "name": "s4yt-api",
  "version": "2.0.0",
  "author": "Krzysztof Garbos",
  "contributors": [
    "David Bishop",
    "Krzysztof Garbos",
    "Jonathan Lam",
    "Soham Desai",
    "Shema Dabiri",
    "Siddhanth Subramanian",
    "Akpevwen Sebastian Gbudje"
  ],
  "description": "This is the special event/'game', called Dollars for Your Thoughts ($4YT), back-end REST API for Building-u.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildingu/s4yt-api.git"
  },
  "main": "src/v1/server.ts",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-ts": "npx tsc --noEmit",
    "seedDB": "node --loader ts-node/esm --experimental-specifier-resolution=node ./src/v2/seeders/test/seeder.ts",
    "addData": "node --loader ts-node/esm --experimental-specifier-resolution=node ./src/v2/seeders/prod/addData.ts",
    "createChests": "node --loader ts-node/esm --experimental-specifier-resolution=node ./src/v2/seeders/createChests.ts",
    "copyWinners": "node --loader ts-node/esm --experimental-specifier-resolution=node ./src/v2/seeders/copyWinners.ts",
    "generateTestCodes": "node --loader ts-node/esm --experimental-specifier-resolution=node ./src/v2/seeders/utils.ts",
    "build": "webpack --config webpack.config.cjs",
    "serve": "cross-env NODE_ENV=production node ./build/server.cjs",
    "clean": "rm -rf node_modules"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "body-parser": "1.20.3",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-rate-limit": "7.5.0",
    "helmet": "7.2.0",
    "hpp": "0.2.3",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.13.2",
    "morgan": "1.10.0",
    "node-schedule": "2.1.1",
    "nodemailer": "6.10.0",
    "socket.io": "4.8.1",
    "uuidv4": "6.2.13",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/body-parser": "1.19.5",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/hpp": "0.2.6",
    "@types/jsonwebtoken": "9.0.9",
    "@types/morgan": "1.9.9",
    "@types/node": "22.14.0",
    "@types/node-schedule": "2.1.7",
    "@types/nodemailer": "6.4.17",
    "cross-env": "7.0.3",
    "esm": "3.2.25",
    "nodemon": "3.1.9",
    "path": "0.12.7",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "webpack": "5.98.0",
    "webpack-cli": "6.0.1",
    "webpack-node-externals": "3.0.0"
  }
}
